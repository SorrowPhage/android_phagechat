<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="5dp"
    >
    <LinearLayout
        android:id="@+id/chat_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        >
        <ImageView
            android:id="@+id/chat_message_image"
            android:padding="5dp"
            android:adjustViewBounds="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/chat_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:textColor="@color/black"
            android:background="@drawable/chat_text_shape"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/chat_host_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:background="@drawable/chat_host_shape"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/chat_host_message_image"
            android:padding="5dp"
            android:adjustViewBounds="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
    </LinearLayout>





</LinearLayout>
